<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/b4x4"
    tools:context=".Game4x4Activity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >


        <TextView android:text="Score:"
            android:textSize="32dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"/>
        <TextView
            android:textStyle="bold"
            android:text="最高分:"
            android:textSize="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textStyle="bold"
            android:id="@+id/tvbeast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            />
    </LinearLayout>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/gameView"
        android:background="@drawable/b4x4"
        android:columnCount="4"
        android:layout_gravity="center"
        >

    </GridLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <ImageButton
            android:id="@+id/Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/a4x4_start"
            android:background="#0000"
            />
        <ImageButton
            android:id="@+id/Restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/a4x4_restart"
            android:background="#0000"
            android:layout_toRightOf="@+id/Start"
            />
        <ImageButton
            android:id="@+id/Introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/a4x4_introduction"
            android:background="#0000"
            android:layout_toRightOf="@+id/Restart"
            />
        <ImageButton
           android:adjustViewBounds="true"
           android:padding="0dip"
           android:id="@+id/Sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/yx_on"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>



</LinearLayout>
