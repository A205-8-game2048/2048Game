<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shouye"
    >
    <ImageButton
        android:id="@+id/Sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/yx_on"
        android:background="#00000000"

        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <ImageButton
        android:id="@+id/help"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:src="@drawable/chelp"
        android:layout_above="@+id/game4x4"
        android:layout_alignLeft="@+id/game4x4"
        android:layout_alignStart="@+id/game4x4" />

    <ImageButton
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:src="@drawable/c4x4"
        android:id="@+id/game4x4"
        android:layout_above="@+id/game5x5"
        android:layout_alignLeft="@+id/game5x5"
        android:layout_alignStart="@+id/game5x5" />

    <ImageButton
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:text="5*5模式"
        android:id="@+id/game5x5"
        android:src="@drawable/c5x5"
        android:layout_above="@+id/game4x4_0"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:src="@drawable/c4x4_1"
        android:id="@+id/game4x4_0"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/game5x5"
        android:layout_alignStart="@+id/game5x5" />
</RelativeLayout>